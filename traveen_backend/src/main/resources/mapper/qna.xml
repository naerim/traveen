<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.qna.model.mapper.QnaMapper">
	<resultMap type="qna" id="qna">
		<result column="idx" property="idx" />
		<result column="user_idx" property="userIdx" />
		<result column="qna_idx" property="qnaIdx" />
		<result column="content" property="content" />
	</resultMap>
	
	<!-- QnA 조회 -->
	<select id="viewQnaComment" parameterType="int" resultMap="qna">
		select q.idx, u.idx, q.title, q.content
		from qna q, users u
		where q.idx = #{idx} and q.user_idx = u.idx
	</select>
	
	<!-- QnA 등록 -->
	<insert id="registQnaComment" parameterType="qna">
		insert into qna(user_idx, title, content)
		values(#{userIdx}, #{title}, #{content})
	</insert>
	
	<!-- QnA 삭제 -->
	<delete id="deleteQnaComment" parameterType="int">
		delete from qna
		where idx = #{idx}
	</delete>
	
	<!-- idx로 QnA 찾기 -->
	<select id="getQna" parameterType="int" resultMap="qna">
		select q.idx, u.idx, q.title, q.content
		from qna q, users u
		where q.idx = #{idx} and q.user_idx = u.idx
	</select>
</mapper>