	<!-- 공지사항 목록 -->
	<select id="listNotice" resultMap="notice">
		select idx, title, create_date, view_count
		from notice
<!-- 		<where> -->
<!-- 			<include refid="search"></include> -->
<!-- 		</where> -->
		order by create_date desc
<!-- 		limit #{start}, #{listsize} -->
	</select>
	
	<!-- 공지사항 조회 -->
	<select id="viewNotice" parameterType="int" resultMap="notice">
		select n.idx, u.idx, n.title, n.content, n.create_date, n.view_count
		from notice n, users u
		where n.idx = #{idx} and n.user_idx = u.idx
	</select>

	<!-- 조회수 카운트 -->
	<update id="updateHit" parameterType="int">
		update notice
		set view_count = view_count + 1
		where idx = #{idx}
	</update>
	
	<!-- 공지사항 등록 -->
	<insert id="registNotice" parameterType="notice">
		insert into notice(user_idx, title, content, create_date, view_count)
		values(#{userIdx}, #{title}, #{content}, now(), 0)
	</insert>
	
	<!-- 공지사항 수정 -->
	<update id="modifyNotice" parameterType="notice">
		update notice
		set title = #{title}, content = #{content}
		where idx = #{idx}
	</update>
	
	<!-- 공지사항 삭제 -->
	<delete id="deleteNotice" parameterType="int">
		delete from notice
		where idx = #{idx}
	</delete>
	
	<!-- idx로 공지사항 찾기 -->
	<select id="getNotice" parameterType="int" resultMap="notice">
		select n.idx, u.idx, n.title, n.content, n.create_date, n.view_count
		from notice n, users u
		where n.idx = #{idx} and n.user_idx = u.idx
	</select>
	
	<!-- 총 공지사항 개수 -->
	<select id="getTotalNoticeCount" parameterType="int" resultType="int">
		select count(idx)
		from notice
<!-- 		<where> -->
<!-- 			<include refid="search"></include> -->
<!-- 		</where> -->
	</select>
	
	<!-- 총 공지사항 개수 Map<String, String> 버전 -->
		<select id="getTotalNoticeCountString" parameterType="int" resultType="int">
		select count(idx)
		from notice
<!-- 		<where> -->
<!-- 			<include refid="search"></include> -->
<!-- 		</where> -->
	</select>
</mapper>